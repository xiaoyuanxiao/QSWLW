<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="修改密码"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_modifypassword_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="x"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/tv_modifypassword_close"
        android:layout_marginTop="8dp"
        android:background="@color/view" />

    <EditText
        android:id="@+id/edt_modifypassword_old"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_grey_white"
        android:hint="请输入旧密码"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/edt_modifypassword_new"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_modifypassword_old"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_grey_white"
        android:hint="请输入新密码"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/edt_modifypassword_confirmnew"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_modifypassword_new"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_grey_white"
        android:hint="确认新密码"
        android:textSize="12sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_modifypassword_confirmnew"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_modifypassword_cancel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/corner_gray"
            android:text="取消"/>
        <Button
            android:id="@+id/btn_modifypassword_confirm"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/corner_blue"
            android:text="确认"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>