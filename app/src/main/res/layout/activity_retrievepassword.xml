<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="二级密码"
                android:textColor="@color/red"
                android:textSize="9sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_07"/>
                <Spinner
                    android:id="@+id/consume_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"></Spinner>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_03"/>
                <EditText
                    android:id="@+id/edt_retrieve_phone"
                    style="@style/edt_register"
                    android:hint="请输入手机号码"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_08"/>
                <EditText
                    android:id="@+id/edt_retrieve_code"
                    style="@style/edt_register"
                    android:hint="手机验证信息"/>
                <Button
                    android:id="@+id/btn_retrieve_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/corner_code_btn"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="9sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_09"/>
                <EditText
                    android:id="@+id/edt_retrieve_password"
                    style="@style/edt_register"
                    android:hint="请设置密码"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_09"/>
                <EditText
                    android:id="@+id/edt_retrieve_confirmPassword"
                    style="@style/edt_register"
                    android:hint="请再次设置密码"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <Button
                android:id="@+id/btn_retreve_confirm"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_corner"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="11sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>