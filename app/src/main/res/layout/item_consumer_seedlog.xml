<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_consumer_bean"
            style="@style/tv_harvestaddress"
            android:text="银豆："/>
        <TextView
            android:id="@+id/tv_consumer_seedlog"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/tv_consumer_bean"
            android:textColor="@color/red"
            android:text="90000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/view"
            android:layout_centerHorizontal="true"
            android:text="转为"/>
        <TextView
            android:layout_toLeftOf="@+id/tv_consumer_num"
            style="@style/tv_harvestaddress"
            android:text="银豆："/>
        <TextView
            android:id="@+id/tv_consumer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:text="90000"/>
    </RelativeLayout>
    <TextView
        style="@style/tv_harvestaddress"
        android:layout_marginTop="6dp"
        android:text="转换时间：2017-03-05 12：00：00"/>

</LinearLayout>