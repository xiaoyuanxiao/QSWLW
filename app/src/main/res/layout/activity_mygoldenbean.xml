<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RadioGroup
            android:id="@+id/fg_myGoldenBean"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_myGoldenBean"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="我的金豆"
                android:textSize="10sp"
                android:textColor="@color/view"
                android:gravity="center"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/rb_recommendGoldenBean"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="推荐金豆"
                android:textSize="10sp"
                android:textColor="@color/view"
                android:gravity="center"
                android:button="@null" />
            <RadioButton
                android:id="@+id/rb_receiveGoldenBean"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="获赠金豆"
                android:textSize="10sp"
                android:textColor="@color/view"
                android:gravity="center"
                android:button="@null" />
        </RadioGroup>
        <View
            android:id="@+id/view_EntrepreneurialSeed"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/red" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_entrepreneurialSeed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center" >
    </android.support.v4.view.ViewPager>




</LinearLayout>