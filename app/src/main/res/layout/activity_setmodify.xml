<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_info" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_set_avater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">
        <TextView
           style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="我的头像"/>
        <com.qs.qswlw.view.NoBorderCircleImageView
            android:id="@+id/iv_set_avater"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/bg_01"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="ID"/>
        <TextView
            android:id="@+id/tv_setmodify_id"
            style="@style/tv_harvestaddress"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
    <RelativeLayout
        android:id="@+id/rl_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="用户名"/>
        <TextView
            android:id="@+id/tv_setmodify_userName"
            style="@style/tv_harvestaddress"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="电话"/>
        <TextView
            android:id="@+id/tv_setmodify_phone"
            style="@style/tv_harvestaddress"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="密码"/>
        <Button
            android:id="@+id/btn_setpassword"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/corner_modify"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="设置二级密码"/>
        <Button
            android:id="@+id/btn_settwopassword"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/corner_modify"
            android:text="二级密码"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="找回二级密码"/>
        <Button
            android:id="@+id/btn_retrievePassword"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/corner_modify"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
</LinearLayout>