<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_info">
    <RelativeLayout
        android:id="@+id/rl_set_avater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <TextView
           style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="我的头像"/>
        <com.qs.qswlw.view.CircleImageView
            android:id="@+id/iv_set_avater"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/bg_01"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="我的头像"/>
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="16421585"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="用户名"/>
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="华东"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="电话"/>
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="164212585"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            style="@style/tv_harvestaddress"
            android:layout_centerVertical="true"
            android:text="电话"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/corner_blue"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="修改密码"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>
</LinearLayout>