<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/main_title"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_01"/>
                <EditText
                    style="@style/edt_register"
                    android:id="@+id/edt_register_id"
                    android:hint="推荐人ID"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_02"/>
                <EditText
                    style="@style/edt_register"
                    android:id="@+id/edt_register_name"
                    android:hint="推荐人"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_03"/>
                <EditText
                    style="@style/edt_register"
                    android:id="@+id/edt_register_phone"
                    android:hint="推荐人手机号"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_04"/>
                <EditText
                    style="@style/edt_register"
                    android:id="@+id/edt_register_username"
                    android:hint="请输入用户名"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_05"/>
                <EditText
                    style="@style/edt_register"
                    android:id="@+id/edt_register_myphone"
                    android:hint="请输入手机号码"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_07"/>
                <Spinner
                    android:id="@+id/consume_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"></Spinner>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_08"/>
                <EditText
                    style="@style/edt_register"
                    android:id="@+id/edt_register_code"
                    android:hint="手机验证信息"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/corner_code_btn"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_09"/>
                <EditText
                    style="@style/edt_register"
                    android:id="@+id/edt_register_password"
                    android:hint="请设置密码"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zc_09"/>
                <EditText
                    style="@style/edt_register"
                    android:id="@+id/edt_register_confirmPassword"
                    android:hint="请再次设置密码"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view" />
            <LinearLayout
                style="@style/ll_register">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pwd_l"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="12sp"
                   android:text="我已阅读并同意"
                   android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:text="《注册协议》"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/btn_corner"
                android:text="注册"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="25dp"
                android:textColor="@color/white"
                android:textSize="11sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>