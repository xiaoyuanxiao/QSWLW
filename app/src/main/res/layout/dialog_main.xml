<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ea1e4f"
    android:gravity="center"
    android:paddingTop="30dp"
    android:paddingBottom="40dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">
    <TextView
        android:id="@+id/tv_dialog_index_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/text_yellow"
        android:text=""/>
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_dialog_index_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/text_yellow"
        android:text=""/>
    <TextView
        android:id="@+id/tv_dialog_index_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/text_yellow"
        android:layout_gravity="right"
        android:text=""/>
    <TextView
        android:id="@+id/tv_dialog_index_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_yellow"
        android:layout_gravity="right"
        android:text=""/>

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/stroke_splash"
        android:textColor="@color/text_yellow"
        android:textSize="10sp"
        android:text="确定"/>


</LinearLayout>