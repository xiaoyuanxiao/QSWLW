<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:id="@+id/tv_venturegold_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="激励创业金豆"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/view" />

        <TextView
            android:id="@+id/tv_venturegold_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="推荐创业金豆"
            android:textColor="@color/black"
            android:textSize="10sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/view" />

        <TextView
            android:id="@+id/tv_venturegold_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="获赠创业金豆"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:id="@+id/view_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="@color/red" />
        <View
            android:id="@+id/view_center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="@color/view" />
        <View
            android:id="@+id/view_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="@color/view" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true" >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@mipmap/bg_01"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_venturegoldbeans_titile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="累计激励创业金豆"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:text="18"/>
                </LinearLayout>

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="20%激励"
                android:background="@color/red"
                android:gravity="center"/>

            <com.qs.qswlw.view.MyListView
                android:id="@+id/lv_venturegoldbeans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/view"
                android:dividerHeight="1px">
            </com.qs.qswlw.view.MyListView>


        </LinearLayout>

    </ScrollView>
</LinearLayout>