<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:src="@mipmap/bbg_02"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">
        <TextView
            android:id="@+id/tv_nickname_commoditymanagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="得得"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="11sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥123"
            android:layout_marginTop="5dp"
            android:textColor="@color/red"
            android:textSize="11sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销量 0"
            android:layout_marginTop="5dp"
            android:textColor="@color/view"
            android:textSize="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存 18587"
            android:layout_marginTop="5dp"
            android:textColor="@color/view"
            android:textSize="10sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/tv_addTime_commoditymanagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加时间：2017-04-06"
            android:textColor="@color/view"
            android:textSize="9sp"/>
        <RelativeLayout
            android:layout_below="@+id/tv_addTime_commoditymanagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:src="@mipmap/sj"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/goods_edit"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/goods_del"/>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>