<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_harvestaddresslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_name_harvestaddresslist"
            style="@style/tv_harvestaddress"
            android:text="哗哗"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_phone_harvestaddresslist"
            style="@style/tv_harvestaddress"
            android:text="12345678912"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/tv_address_harvestaddresslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <view
       android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/btn_harvestaddresslist"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/checkbox_harvest" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="默认地址"
            android:textSize="10sp"/>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="10sp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center_vertical" />
        <TextView
            android:id="@+id/del_harvestaddresslist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="10sp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>