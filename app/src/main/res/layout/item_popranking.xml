<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <com.qs.qswlw.view.NoBorderCircleImageView
        android:id="@+id/iv_popranking"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/cj">
    </com.qs.qswlw.view.NoBorderCircleImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_popranking"
        android:orientation="vertical">
        <TextView
            android:id="@+id/popranking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新晟食品"
            android:textColor="#747474"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/popranking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:193"
            android:textColor="#747474"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/popranking_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:193"
            android:textColor="#747474"
            android:textSize="11sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排名:"
                android:textColor="#747474"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/popranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1"
                android:textColor="#ff9930"
                android:textSize="11sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ranking_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售额："
                android:textColor="#747474"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/popranking_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1099779"
                android:textColor="#ff9930"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>