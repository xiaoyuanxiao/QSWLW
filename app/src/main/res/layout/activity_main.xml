<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bbg_02"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <ImageView
            android:id="@+id/iv_setting_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_icon"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_title"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_ranking_main"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableTop="@mipmap/lan4"
            android:gravity="center_horizontal"
            android:text="排行榜" />
    </RelativeLayout>

    <com.qs.qswlw.view.MarqueeTextView
        android:id="@+id/tv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:background="#eb464c"
        android:padding="4dp"
        android:text="钱盛物联网再创辉煌！谢谢大家的关注与支持！钱盛物联网再创辉煌！谢谢大家的关注与支持！"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <RadioButton
            android:id="@+id/rb_main_mall"
            style="@style/tv_iv_main"
            android:drawableTop="@mipmap/lan1"
            android:text="钱盛商城" />

        <RadioButton
            android:id="@+id/rb_main_union"
            style="@style/tv_iv_main"
            android:drawableTop="@mipmap/lan2"
            android:text="钱盛联盟" />

        <RadioButton
            android:id="@+id/rb_main_funtime"
            style="@style/tv_iv_main"
            android:drawableTop="@mipmap/happygame"
            android:text="开心一刻" />

        <RadioButton
            android:id="@+id/rb_main_rankings"
            style="@style/tv_iv_main"
            android:drawableTop="@mipmap/luckgame"
            android:text="排名榜" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <include layout="@layout/activity_switchview"></include>
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <RadioButton
            android:id="@+id/rb_main_goodprojects"
            style="@style/tv_iv_main"
            android:drawableTop="@mipmap/hxm"
            android:text="中国好项目" />

        <RadioButton
            android:id="@+id/rb_main_WitnessChinaBusiness"
            style="@style/tv_iv_main"
            android:drawableTop="@mipmap/jzhs"
            android:text="见证华商" />

        <RadioButton
            android:id="@+id/rb_main_Win"
            style="@style/tv_iv_main"
            android:drawableTop="@mipmap/lan3"
            android:text="赢在钱盛" />

        <RadioButton
            android:id="@+id/rb_main_media"
            style="@style/tv_iv_main"
            android:drawableTop="@mipmap/qscm"
            android:text="钱盛传媒" />
    </RadioGroup>

</LinearLayout>
