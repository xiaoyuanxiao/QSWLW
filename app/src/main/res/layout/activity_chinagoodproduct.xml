<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_china_praiseRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
           android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="好评率"
            android:textColor="@color/tv_china"
            android:textSize="10sp"/>
        <View
            android:layout_width="0.2dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@color/view"/>
        <TextView
            android:id="@+id/tv_china_orderQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="订单数量"
            android:textColor="@color/tv_china"
            android:textSize="10sp"/>
        <View
            android:layout_width="0.2dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@color/view"/>
        <TextView
            android:id="@+id/tv_china_orderAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="订单金额"
            android:textColor="@color/tv_china"
            android:textSize="10sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:id="@+id/view_china_left"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/red"/>
        <View
            android:id="@+id/view_china_center"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/view"/>
        <View
            android:id="@+id/view_china_right"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/view"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gv_chinagoodproduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:verticalSpacing="10dp">
    </GridView>

</LinearLayout>