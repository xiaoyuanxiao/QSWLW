<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/tv_line"
        android:padding="10dp">
        <FrameLayout
            android:id="@+id/fl_setting_avater"
            android:layout_width="wrap_content"
            android:layout_height="100dp">
            <com.qs.qswlw.view.CircleImageView
                android:id="@+id/iv_setting_avater"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/image1" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:src="@mipmap/touxiang"
                android:scaleType="fitXY"
                android:layout_gravity="bottom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:text="商家"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="3dp"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="ID:187"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:text="昵称：倩茜"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp">
        <TextView
            style="@style/tv_harvestaddress"
            android:text="会员编号：CN44954175"
            android:layout_marginTop="15dp"/>
        <TextView
            style="@style/tv_harvestaddress"
            android:text="会员编号：CN44954175"/>
        <TextView
            style="@style/tv_harvestaddress"
            android:text="会员编号：CN44954175"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:text="您已经验证，无需重复操作！"
            android:layout_marginTop="15dp"/>
    </LinearLayout>



</RelativeLayout>