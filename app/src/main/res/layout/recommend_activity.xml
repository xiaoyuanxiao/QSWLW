<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="让产业智能形成片，让供应系统形成链"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你参与我激励，扫码就实现！"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_recommend_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="倩倩"
            android:textColor="@color/text_yellow_shallow"
            android:textSize="16sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                style="@style/tv_harvestaddress"
                android:text="昵称:"/>

            <TextView
                android:id="@+id/tv_recommend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倩倩"
               android:textColor="@color/text_yellow_shallow"
                android:textSize="16sp"/>

            <TextView
                style="@style/tv_harvestaddress"
                android:layout_marginLeft="5dp"
                android:text="ID:"/>
            <TextView
                android:id="@+id/tv_recommend_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="187"
                android:textColor="@color/text_yellow_shallow"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_QRCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/erwm" />
        <TextView
            android:id="@+id/tv_recommend_register"
            style="@style/tv_standard"
            android:layout_below="@+id/iv_QRCode"
            android:layout_marginTop="3dp"
            android:text="扫此二维码，注册"
            />
        <TextView
            android:id="@+id/tv_recommend_share"
            style="@style/tv_standard"
            android:layout_below="@+id/tv_recommend_register"
            android:layout_marginTop="3dp"
            android:text="长按此二维码分享到您的交际圈"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_recommend_share"
            android:layout_marginTop="15dp"
            android:text="欢迎您的加入"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>


</RelativeLayout>