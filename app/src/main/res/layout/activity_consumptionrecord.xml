<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="ID:"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout style="@style/ll_consumptionrecord">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="昵称:"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout style="@style/ll_consumptionrecord">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="金额:"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout style="@style/ll_consumptionrecord">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="模式:"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/edt_twentypercent_consumptionrecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners"
            android:text="20%"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout style="@style/ll_consumptionrecord">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="让利:"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners"
            android:hint="让利金额"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="发票凭证:"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_selectorfile"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/corners_black"
                android:text="选取文件"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_isselect_consumptionrecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="未选择文件"
                android:textColor="@color/black"
                android:textSize="8sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="1dp"
        android:text="(仅支持图片类型)"
        android:textColor="@color/black"
        android:textSize="9sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="18dp"
        android:background="@color/view" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_corner"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>