<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp">
    <TextView
        android:id="@+id/tv_consumerSilverBean_variableQuantity"
        android:layout_marginTop="15dp"
       style="@style/tv_harvestaddress"
        android:text="变动数量：3168"/>
    <TextView
        android:id="@+id/tv_consumerSilverBean_orderTime"
        style="@style/tv_harvestaddress"
        android:text="下单时间：2017-03-26"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/tv_consumerSilverBean_paymentTime"
        style="@style/tv_harvestaddress"
        android:layout_marginTop="4dp"
        android:text="付款时间：2017-03-26"/>
    <TextView
        android:id="@+id/tv_consumerSilverBean_orderNumber"
        style="@style/tv_harvestaddress"
        android:layout_marginTop="4dp"
        android:text="订单编号：8" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="15dp"
        android:background="@color/view"></View>

</LinearLayout>