<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a3a4a4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp">
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:src="@mipmap/user_12"/>
                        <TextView
                            android:id="@+id/tv_setting_topcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|top"
                            android:background="@drawable/setting_corner"
                            android:gravity="center"
                            android:text="37"
                            android:textColor="@color/red"
                            android:textSize="9sp"
                            android:visibility="gone"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="个人中心"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iv_setting_set"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                       android:src="@mipmap/shezhi"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_setting_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/tv_cyzx"
                            style="@style/tv_standard"
                            android:layout_marginLeft="10dp"
                            android:text="创业中心：无" />
                        <TextView
                            android:id="@+id/tv_recommender"
                            style="@style/tv_standard"
                            android:layout_below="@+id/tv_cyzx"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="3dp"
                            android:text="推荐人:吴思琪" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_recommender"
                            android:layout_marginLeft="20dp">
                            <FrameLayout
                                android:id="@+id/fl_setting_avater"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_centerHorizontal="true">
                                <com.qs.qswlw.view.CircleImageView
                                    android:id="@+id/iv_setting_avater"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@mipmap/image1" />
                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="8dp"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/touxiang"/>
                                <TextView
                                    android:id="@+id/tv_role"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|bottom"
                                    android:layout_marginBottom="13dp"
                                    android:text="商家"
                                    android:textColor="@color/red"
                                    android:textSize="10sp"/>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/tv_setting_id"
                                style="@style/tv_standard"
                                android:layout_below="@id/fl_setting_avater"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="-5dp"
                                android:text="ID:MI1654987" />

                            <TextView
                                android:id="@+id/tv_setting_name"
                                style="@style/tv_standard"
                                android:layout_below="@id/tv_setting_id"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:ellipsize="end"
                                android:maxEms="8"
                                android:maxLines="1"
                                android:text="昵称:刘得华" />
                            <TextView
                                android:id="@+id/tv_setting_shopname"
                                style="@style/tv_standard"
                                android:layout_below="@id/tv_setting_name"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:ellipsize="end"
                                android:maxEms="8"
                                android:maxLines="1"
                                android:text="店铺名称:津津食品..."
                                android:visibility="gone" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@id/rl_setting_left"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_setting_consumptionMoney"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/setting_one"
                                style="@style/tv_standard"
                                android:text="消费总金额" />

                            <TextView
                                android:id="@+id/tv_setting_consumptionMoney"
                                style="@style/tv_standard"
                                android:layout_alignParentRight="true"
                                android:text="0" />

                            <View
                                style="@style/view_standard"
                                android:layout_below="@id/tv_setting_consumptionMoney" />
                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/setting_three"
                                style="@style/tv_standard"
                                android:text="消费银豆" />

                            <TextView
                                android:id="@+id/tv_setting_consumerSilverbeans"
                                style="@style/tv_standard"
                                android:layout_alignParentRight="true"
                                android:text="0" />

                            <View
                                style="@style/view_standard"
                                android:layout_below="@id/tv_setting_consumerSilverbeans" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/setting_otwo"
                                style="@style/tv_standard"
                                android:text="创业种子（激励）" />

                            <TextView
                                android:id="@+id/tv_setting_encourage"
                                style="@style/tv_standard"
                                android:layout_alignParentRight="true"
                                android:text="0" />

                            <View
                                style="@style/view_standard"
                                android:layout_below="@id/tv_setting_encourage" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/setting_four"
                                style="@style/tv_standard"
                                android:text="创业金豆（提现）" />

                            <TextView
                                android:id="@+id/tv_setting_withdrawals"
                                style="@style/tv_standard"
                                android:layout_alignParentRight="true"
                                android:text="0" />

                            <View
                                style="@style/view_standard"
                                android:layout_below="@id/tv_setting_withdrawals" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/setting_five"
                                style="@style/tv_standard"
                                android:text="消费金豆（重消）" />

                            <TextView
                                android:id="@+id/tv_setting_consumerbeans"
                                style="@style/tv_standard"
                                android:layout_alignParentRight="true"
                                android:text="0" />

                            <View
                                style="@style/view_standard"
                                android:layout_below="@id/tv_setting_consumerbeans" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/setting_six"
                                style="@style/tv_standard"
                                android:text="上个激励日" />

                            <TextView
                                android:id="@+id/tv_setting_paytaxes"
                                style="@style/tv_standard"
                                android:layout_alignParentRight="true"
                                android:text="0" />

                            <View
                                style="@style/view_standard"
                                android:layout_below="@id/tv_setting_paytaxes" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <com.qs.qswlw.view.MyGridView
                android:id="@+id/gv_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2" />
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:background="@color/view"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <RadioButton
            android:id="@+id/rb_main_qsmall"
            style="@style/tv_iv_setting"
            android:drawablePadding="2dp"
            android:drawableTop="@mipmap/footer01"
            android:text="钱盛首页"
            android:textSize="9sp"/>

        <RadioButton
            android:id="@+id/rb_main_lianmeng"
            style="@style/tv_iv_setting"
            android:drawablePadding="2dp"
            android:drawableTop="@mipmap/gouwuche"
            android:text="钱盛商城"
            android:textSize="9sp"/>

        <RadioButton
            android:id="@+id/rb_main_funtime"
            style="@style/tv_iv_setting"
            android:drawablePadding="2dp"
            android:drawableTop="@mipmap/happygame01"
            android:text="开心一刻"
            android:textSize="9sp"/>

        <RadioButton
            android:id="@+id/rb_main_luck"
            style="@style/tv_iv_setting"
            android:drawablePadding="2dp"
            android:drawableTop="@mipmap/luckgame01"
            android:text="促销抽奖"
            android:textSize="9sp"/>
        <RadioButton
            android:id="@+id/rb_main_exit"
            style="@style/tv_iv_setting"
            android:drawablePadding="2dp"
            android:drawableTop="@mipmap/out"
            android:text="推出"
            android:textSize="9sp"/>
    </RadioGroup>

</LinearLayout>