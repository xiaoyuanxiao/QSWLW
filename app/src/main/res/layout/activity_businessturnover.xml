<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:id="@+id/rg_recommendrecords"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/tv_businessturnover_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/red"
            android:gravity="center"
            android:textSize="12sp"
            android:text="今日营业额"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/view"/>
        <TextView
            android:id="@+id/tv_businessturnover_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/view"
            android:gravity="center"
            android:textSize="12sp"
            android:text="历史营业额"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:id="@+id/view_turnover_left"
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:background="@color/red"/>
        <View
            android:id="@+id/view_turnover_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0.1dp"
            android:background="@color/view"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">
        <TextView
            style="@style/tv_harvestaddress_weight"
            android:text="时间"
            android:gravity="center"/>
        <TextView
            style="@style/tv_harvestaddress_weight"
            android:text="用户ID"
            android:gravity="center"/>
        <TextView
            style="@style/tv_harvestaddress_weight"
            android:text="用户名称"
            android:gravity="center"/>
        <TextView
            style="@style/tv_harvestaddress_weight"
            android:text="金额"
            android:gravity="center"/>
        <TextView
            style="@style/tv_harvestaddress_weight"
            android:text="让利额"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>

    <com.qs.qswlw.view.SwipeRefreshView
        android:id="@+id/lv_turnover_sw"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_turnover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"></ListView>
    </com.qs.qswlw.view.SwipeRefreshView>
</LinearLayout>